{
  "name": "Ruby",
  "image": "mcr.microsoft.com/devcontainers/ruby:2.7",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/server/ruby",
  "forwardPorts": [4567],
  "portsAttributes": {
    "4567": {
      "label": "Ruby",
      "onAutoForward": "openBrowserOnce"
    }
  },
  "secrets": {
    "PAYPAL_CLIENT_ID": {
      "description": "Sandbox client ID of the application.",
      "documentationUrl": "https://developer.paypal.com/dashboard/applications/sandbox"
    },
    "PAYPAL_CLIENT_SECRET": {
      "description": "Sandbox secret of the application.",
      "documentationUrl": "https://developer.paypal.com/dashboard/applications/sandbox"
    }
  },
  "containerEnv": {
    "PAYPAL_API_BASE_URL": "https://api-m.sandbox.paypal.com",
    "DOMAINS": "paypal.com",
    "PAYPAL_SDK_BASE_URL":"https://www.sandbox.paypal.com"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vsls-contrib.codetour",
        "PayPal.vscode-paypal",
        "rebornix.Ruby"
      ]
    },
    "settings": {
      "git.openRepositoryInParentFolders": "always"
    },
    "codespaces": {
      "openFiles": ["README.md"]
    }
  },
  "postCreateCommand": "gem install bundler:1.17.2 && bundle _1.17.2_ install --path vendor/bundle",
  "postAttachCommand": "bundle exec ruby src/server.rb"
}